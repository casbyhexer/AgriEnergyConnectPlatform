@model AgriEnergyConnectPlatform.Models.Entities.Farmers

<div class="card">
    <div class="card-header">
        <h2>Products for @Model.Name</h2>
    </div>
    <div class="card-body">
        <table class="table table-dark table-bordered">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
